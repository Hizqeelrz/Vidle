@model Vidle.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


<ul>
    <h4>Membership Type:</h4> <em> @Model.MembershipType.Name </em>

    @if (Model.Birthdate.HasValue)
    {
        <h4>Birthdate:</h4>

        <em>@Model.Birthdate</em>
    }
</ul>
