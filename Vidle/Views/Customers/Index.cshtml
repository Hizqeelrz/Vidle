@model IEnumerable<Vidle.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>Sorry! We do not have any customers yet....</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var customers in Model)
            {
                <tr>
                    <td>@customers.Id</td>
                    <td>@Html.ActionLink(customers.Name, "Edit", "Customers", new {id = customers.Id}, null)</td>
                    <td>@customers.MembershipType.Name</td>
                    <td>@customers.MembershipType.DiscountRate%</td>
                </tr>
            }
        </tbody>
    </table>
}

